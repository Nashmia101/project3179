{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#ffffff",

  "height": 500,
  "padding": { "left": 60, "right": 24, "top": 10, "bottom": 70 },

  "data": {
    "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/water_production_aligned_to_rainfall_2014_2020.csv",
    "format": { "type": "csv" }
  },

  "params": [
    {
      "name": "YearPick",
      "value": 2020,
      "bind": { "input": "select", "name": "Year: ", "options": [2014, 2015, 2016, 2017, 2018, 2019, 2020] }
    }
  ],

  "transform": [
    { "filter": "toNumber(datum.Year) === toNumber(YearPick)" },
    { "aggregate": [{ "op": "sum", "field": "Water_Production", "as": "WP" }], "groupby": ["State","Year"] },
    { "window": [{ "op": "rank", "as": "rank_desc" }], "sort": [{ "field": "WP", "order": "descending" }] },
    { "window": [{ "op": "rank", "as": "rank_asc" }], "sort": [{ "field": "WP", "order": "ascending" }] },
    { "calculate": "datum.rank_desc === 1", "as": "is_max" },
    { "calculate": "datum.rank_asc === 1", "as": "is_min" }
  ],

  "layer": [
    {
      "mark": { "type": "bar", "cornerRadiusEnd": 2 },
      "encoding": {
        "x": {
          "field": "State",
          "type": "nominal",
          "axis": { "title": "State", "labelAngle": -30, "labelFontSize": 12, "titleFontSize": 13 },
          "scale": { "paddingInner": 0.2 }
        },
        "y": {
          "field": "WP",
          "type": "quantitative",
          "title": "Water Production",
          "scale": { "domain": [0, 4500] },
          "axis": {
            "values": [500,1000,1500,2000,2500,3000,3500,4000,4500],
            "format": ",.0f",
            "grid": true,
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "color": {
          "condition": [
            { "test": "datum.is_max", "value": "#22c55e" },
            { "test": "datum.is_min", "value": "#3b82f6" }
          ],
          "value": "#d1d5db",
          "legend": null
        },
        "tooltip": [
          { "field": "State", "type": "nominal" },
          { "field": "Year", "type": "ordinal", "title": "Year" },
          { "field": "WP", "type": "quantitative", "title": "Water Production", "format": ",.0f" }
        ]
      }
    },
    {
      "transform": [
        { "filter": "datum.is_max" },
        { "calculate": "'Highest Water Production: ' + datum.State + ' — ' + format(datum.WP, ',.0f') + ' (' + datum.Year + ')'", "as": "ann_high" }
      ],
      "mark": { "type": "text", "fontSize": 13, "fontWeight": "bold", "align": "left", "fill": "#111827" },
      "encoding": { "x": { "value": 10 }, "y": { "value": 24 }, "text": { "field": "ann_high" } }
    },
    {
      "transform": [
        { "filter": "datum.is_min" },
        { "calculate": "'Lowest Water Production: ' + datum.State + ' — ' + format(datum.WP, ',.0f') + ' (' + datum.Year + ')'", "as": "ann_low" }
      ],
      "mark": { "type": "text", "fontSize": 13, "fontWeight": "bold", "align": "left", "fill": "#111827" },
      "encoding": { "x": { "value": 10 }, "y": { "value": 44 }, "text": { "field": "ann_low" } }
    }
  ],

  "config": {
    "view": { "stroke": null },
    "font": "Inter",
    "title": { "font": "Inter" },
    "axis": { "labelFont": "Inter", "titleFont": "Inter" },
    "legend": { "labelFont": "Inter", "titleFont": "Inter" },
    "header": { "labelFont": "Inter", "titleFont": "Inter" },
    "text": { "font": "Inter" }
  }
}
