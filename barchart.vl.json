{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Water Production by State and Year",
  "background": "#f3f4f6",

  "height": 500,
  "padding": {"left": 60, "right": 24, "top": 10, "bottom": 70},

  "data": {
    "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/water_production_aligned_to_rainfall_2014_2020.csv",
    "format": {"type": "csv"}
  },

  "params": [
    {
      "name": "YearPick",
      "value": "All",
      "bind": {
        "input": "select",
        "name": "Year: ",
        "options": ["All", 2014, 2015, 2016, 2017, 2018, 2019, 2020]
      }
    }
  ],

  "transform": [
    { "filter": "YearPick === 'All' || toNumber(datum.Year) === toNumber(YearPick)" }
  ],

  "mark": { "type": "bar", "cornerRadiusEnd": 2 },

  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": { "title": "State", "labelAngle": -30, "labelFontSize": 12, "titleFontSize": 13 },
      "scale": {"paddingInner": 0.2}
    },

    "xOffset": { "field": "Year", "type": "ordinal" },
    "order":   { "field": "Year", "type": "ordinal" },

    "y": {
      "aggregate": "sum",
      "field": "Water_Production",
      "type": "quantitative",
      "title": "Water Production",
      "scale": { "domain": [0, 4500] },
      "axis": {
        "values": [500,1000,1500,2000,2500,3000,3500,4000,4500],
        "format": ",.0f",
        "grid": true,
        "labelFontSize": 12,
        "titleFontSize": 13
      }
    },

    "color": {
      "field": "State",
      "type": "nominal",
      "legend": { "title": "State" }
    },

    "tooltip": [
      { "field": "State", "type": "nominal" },
      { "field": "Year", "type": "ordinal", "title": "Year" },
      { "aggregate": "sum", "field": "Water_Production", "type": "quantitative", "title": "Water Production", "format": ",.0f" }
    ]
  },

  "config": { "view": { "stroke": null } }
}