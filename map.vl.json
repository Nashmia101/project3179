{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 500,
  "projection": { "type": "mercator", "center": [103.25, 4.2], "scale": 4300, "translate": [400, 250] },
  "config": {"view": {"stroke": "transparent"}},

  "params": [
    {
      "name": "year_selection",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [2014,2015,2016,2017,2018,2019,2020],
        "labels": ["2014","2015","2016","2017","2018","2019","2020"],
        "name": "Select Year: "
      }
    }
  ],

  "layer": [
    {
      "data": { "graticule": { "extent": [[99, 0], [106, 8]], "step": [1, 1] } },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgrey", "strokeWidth": 0.5 }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/ne_10m.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgrey", "stroke": "black", "strokeWidth": 0.6 }
    },

    {
      "data": { "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/rainfall_state_year_avg.csv" },
      "transform": [
        { "filter": "toNumber(datum.Year) == toNumber(year_selection)" },
        { "filter": "isValid(datum['Avg_Rainfall_mm']) && datum['Avg_Rainfall_mm'] != null" },
        { "calculate": "toNumber(datum['Avg_Rainfall_mm'])", "as": "rain_mm" },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/ne_10m.json",
              "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
            },
            "key": "properties.state"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.8 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "rain_mm",
          "type": "quantitative",
          "title": "Average daily rainfall (mm)",
          "scale": { "scheme": "tealblues" },
         "legend": {
  "orient": "none",         
  "direction": "horizontal",
  "legendX": 600,           
  "legendY": 220,           
  "gradientLength": 200,
  "gradientThickness": 12,
  "title": "Average daily rainfall (mm)",
  "padding": 4
 
}
        },
        "tooltip": [
          { "field": "State", "title": "State" },
          { "field": "Year", "title": "Year" },
          { "field": "rain_mm", "title": "Average rainfall (mm)", "format": ".2f" }
        ]
      }
    },

    {
      "data": { "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/rainfall_state_year_avg.csv" },
      "transform": [
        { "filter": "toNumber(datum.Year) == toNumber(year_selection)" },
        { "calculate": "toNumber(datum['Avg_Rainfall_mm'])", "as": "rain_mm" },
        {
          "aggregate": [
            { "op": "argmax", "field": "rain_mm", "as": "row_max" },
            { "op": "argmin", "field": "rain_mm", "as": "row_min" }
          ]
        },
        { "calculate": "'Rainfall in Year ' + toString(year_selection) + ':'", "as": "line1" },
        { "calculate": "'Region with the Highest Average Rainfall: ' + datum.row_max.State + ' (' + format(datum.row_max.rain_mm, '.2f') + ' mm)'", "as": "line2" },
        { "calculate": "'Region with the Lowest Average Rainfall: ' + datum.row_min.State + ' (' + format(datum.row_min.rain_mm, '.2f') + ' mm)'", "as": "line3" }
      ],
      "layer": [
        {
          "mark": { "type": "text", "fontSize": 15, "fontWeight": "bold", "align": "left" },
          "encoding": { "x": { "value": 370 }, "y": { "value": 30 }, "text": { "field": "line1" }, "color": { "value": "black" } }
        },
        {
          "mark": { "type": "text", "fontSize": 15, "fontWeight": "bold", "align": "left", "dy": 24 },
          "encoding": { "x": { "value": 370 }, "y": { "value": 30 }, "text": { "field": "line2" }, "color": { "value": "black" } }
        },
        {
          "mark": { "type": "text", "fontSize": 15, "fontWeight": "bold", "align": "left", "dy": 48 },
          "encoding": { "x": { "value": 370 }, "y": { "value": 30 }, "text": { "field": "line3" }, "color": { "value": "black" } }
        }
      ]
    },

    {
      "data": { "url": "https://raw.githubusercontent.com/Nashmia101/project3179/main/district_centroids_peninsular_notown.csv" },
      "transform": [
        { "filter": "datum.States != 'WP'" },
        {
          "aggregate": [
            { "op": "mean", "field": "Longitude", "as": "lon" },
            { "op": "mean", "field": "Latitude", "as": "lat" }
          ],
          "groupby": ["States"]
        }
      ],
      "mark": { "type": "text", "fontSize": 12, "fontWeight": "bold", "opacity": 1 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "States" }
      }
    }
  ]
}